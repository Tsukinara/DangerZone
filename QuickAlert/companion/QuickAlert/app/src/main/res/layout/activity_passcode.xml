<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dangerzone.myapplication.PasscodeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Passcode:"
        android:id="@+id/passcode_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/current_passcode"
        android:layout_below="@+id/passcode_title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE"
        android:id="@+id/reset_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/new_passcode_title"
        android:layout_alignEnd="@+id/new_passcode_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/new_passcode"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/current_passcode"
        android:layout_alignLeft="@+id/passcode_title"
        android:layout_alignStart="@+id/passcode_title"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u25B2"
        android:id="@+id/up_button"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/new_passcode"
        android:layout_toStartOf="@+id/new_passcode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u25C9"
        android:id="@+id/mid_button"
        android:layout_below="@+id/up_button"
        android:layout_toLeftOf="@+id/new_passcode"
        android:layout_toStartOf="@+id/new_passcode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u25BC"
        android:id="@+id/down_button"
        android:layout_below="@+id/mid_button"
        android:layout_toLeftOf="@+id/new_passcode"
        android:layout_toStartOf="@+id/new_passcode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/confirm_passcode"
        android:layout_alignBottom="@+id/down_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/new_passcode"
        android:layout_alignStart="@+id/new_passcode"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Define New Passcode:"
        android:id="@+id/new_passcode_title"
        android:layout_above="@+id/up_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/clear_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/new_passcode_title"
        android:layout_alignStart="@+id/new_passcode_title" />

</RelativeLayout>
